{
  "name": "electron-vue",
  "version": "0.0.1",
  "main": "dist/main/_.js",
  "author": "草鞋没号 <308487730@qq.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node -r ts-node/register script/build --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node -r ts-node/register script/build --env=production",
    "build": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder"
  },
  "build": {
    "appId": "308487730@qq.com",
    "asar": false,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "extraResources": {
      "from": "src/preload",
      "to": "app/dist/preload"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "ant-design-vue": "^2.0.0",
    "vue": "^3.0.5",
    "vue-router": "^4.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/minimist": "^1.2.1",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vitejs/plugin-vue-jsx": "^1.1.0",
    "@vue/compiler-sfc": "^3.0.5",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "electron": "11.2.3",
    "electron-builder": "^22.8.0",
    "electron-store": "^7.0.2",
    "less": "^4.1.1",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^2.6.1",
    "rollup-plugin-node-externals": "^2.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vite": "^2.0.0"
  },
  "keywords": [
    "vite",
    "electron",
    "vue3",
    "rollup"
  ]
}
